---
const base = import.meta.env.BASE_URL;
---

<section class="hero">
  <div class="hero-bg" id="hero-bg">
    <img src={`${base}images/fav.png`} alt="Animus Visualizer" class="hero-image" />
    <div class="hero-overlay"></div>
  </div>
  
  <div class="hero-content">
    <h1 class="animate-fade-in">
      <span class="glow-text">ANIMUS</span>
    </h1>
    <p class="tagline animate-fade-in animate-delay-1">
      Real-time audio visualizer
    </p>
    <p class="subtitle animate-fade-in animate-delay-2">
      Transform your music into mesmerizing visuals. <br />
      Visualize Spotify, Apple Music, or any audio source.
    </p>
    <div class="hero-cta animate-fade-in animate-delay-3">
      <a href="https://github.com/james-see/animus-visualizer/releases/latest" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
          <polyline points="7 10 12 15 17 10"/>
          <line x1="12" y1="15" x2="12" y2="3"/>
        </svg>
        Download for macOS
      </a>
      <a href="https://github.com/james-see/animus-visualizer" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View Source
      </a>
    </div>
  </div>
  
  <div class="scroll-indicator animate-fade-in animate-delay-4">
    <span>Scroll to explore</span>
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="6 9 12 15 18 9"/>
    </svg>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  
  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    transform-origin: center;
    transition: transform 0.1s ease-out;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at center, transparent 0%, var(--bg-primary) 70%),
      linear-gradient(to bottom, transparent 50%, var(--bg-primary) 100%);
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
  }
  
  .hero h1 {
    margin-bottom: 0.5rem;
    text-shadow: 0 0 60px var(--glow-green);
  }
  
  .tagline {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    opacity: 0;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.8;
    opacity: 0;
  }
  
  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    opacity: 0;
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-muted);
    font-size: 0.875rem;
    opacity: 0;
    animation: bounce 2s ease-in-out infinite;
  }
  
  .scroll-indicator svg {
    animation: bounce 2s ease-in-out infinite;
  }
  
  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(8px); }
  }
  
  @media (max-width: 768px) {
    .tagline {
      font-size: 1rem;
      letter-spacing: 0.1em;
    }
    
    .subtitle {
      font-size: 1rem;
    }
    
    .hero-cta {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>

<script>
  const heroBg = document.getElementById('hero-bg');
  const heroImage = heroBg?.querySelector('.hero-image') as HTMLImageElement;
  
  if (heroImage) {
    let targetX = 0;
    let targetY = 0;
    let currentX = 0;
    let currentY = 0;
    
    document.addEventListener('mousemove', (e) => {
      const centerX = window.innerWidth / 2;
      const centerY = window.innerHeight / 2;
      
      targetX = (e.clientX - centerX) / centerX * 15;
      targetY = (e.clientY - centerY) / centerY * 15;
    });
    
    function animateParallax() {
      currentX += (targetX - currentX) * 0.05;
      currentY += (targetY - currentY) * 0.05;
      
      heroImage.style.transform = `scale(1.1) translate(${currentX}px, ${currentY}px)`;
      requestAnimationFrame(animateParallax);
    }
    
    animateParallax();
  }
</script>
